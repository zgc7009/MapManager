<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6">


    <TextView
        android:id="@+id/text_ip_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/dp_default"
        android:layout_marginRight="@dimen/dp_large"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light" />

    <EditText
        android:id="@+id/field_ip_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="3"
        android:padding="@dimen/dp_default"
        android:hint="xxx"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:background="@android:color/white"
        android:nextFocusDown="@+id/field_ip_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_default"
        android:layout_marginRight="@dimen/dp_default"
        android:text="."
        android:textSize="@dimen/text_large"
        android:textStyle="bold"/>

    <EditText
        android:id="@id/field_ip_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="3"
        android:padding="@dimen/dp_default"
        android:hint="xxx"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:background="@android:color/white"
        android:nextFocusDown="@+id/field_ip_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_default"
        android:layout_marginRight="@dimen/dp_default"
        android:text="."
        android:textSize="@dimen/text_large"
        android:textStyle="bold"/>

    <EditText
        android:id="@id/field_ip_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="3"
        android:padding="@dimen/dp_default"
        android:hint="xxx"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:background="@android:color/white"
        android:nextFocusDown="@+id/field_ip_4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_default"
        android:layout_marginRight="@dimen/dp_default"
        android:text="."
        android:textSize="@dimen/text_large"
        android:textStyle="bold"/>

    <EditText
        android:id="@id/field_ip_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="3"
        android:padding="@dimen/dp_default"
        android:hint="xxx"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:background="@android:color/white" />

</TableRow>